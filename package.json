{
  "name": "agentos",
  "private": true,
  "packageManager": "pnpm@9.0.0",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm -r --parallel dev",
    "dev:api": "pnpm --filter @agentos/api dev",
    "dev:worker": "pnpm --filter @agentos/worker dev",
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "lint": "pnpm -r lint",
    "smoke": "node scripts/smoke.mjs",
    "verify": "pnpm build && pnpm lint && pnpm test && pnpm smoke",
    "db:up": "docker compose up -d",
    "db:down": "docker compose down -v",
    "db:migrate": "pnpm --filter @agentos/shared db:migrate",
    "db:seed": "pnpm --filter @agentos/shared db:seed",
    "create:key": "pnpm --filter @agentos/shared create:key"
  },
  "devDependencies": {
    "typescript-eslint": "^8.54.0"
  }
}
