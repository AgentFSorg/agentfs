# Database
DATABASE_URL=postgres://postgres:postgres@localhost:5432/agentfs

# API
PORT=8787
NODE_ENV=development

# Embeddings (optional for MVP until Phase 2)
OPENAI_API_KEY=
OPENAI_EMBED_MODEL=text-embedding-3-small

# Quotas (preferred; clear units)
WRITE_QUOTA_PER_DAY=5000
EMBED_TOKENS_QUOTA_PER_DAY=2000000
SEARCH_QUOTA_PER_DAY=172800

# Search rate limiting (separate from daily quota)
SEARCH_RATE_LIMIT_PER_MINUTE=120

# Back-compat (deprecated; do not use for new deployments)
# QUOTA_WRITES_PER_DAY=5000
# QUOTA_EMBED_TOKENS_PER_DAY=2000000
# QUOTA_SEARCHES_PER_MINUTE=120

# Rate limiting (in-memory, per-process)
RATE_LIMIT_REQUESTS_PER_MINUTE=120

# Pre-auth throttling (in-memory, per-process, IP-based; applies to /v1/* before auth)
PREAUTH_RATE_LIMIT_PER_MINUTE=600

# Reverse proxy / client IP handling
TRUST_PROXY=false

# Metrics
# In production, metrics are disabled unless ENABLE_METRICS=true.
# If ENABLE_METRICS=true in production, METRICS_TOKEN is required.
ENABLE_METRICS=true
METRICS_TOKEN=

# Admin bootstrap (dev only)
# If set, enables POST /v1/admin/create-key with this token
ADMIN_BOOTSTRAP_TOKEN=
